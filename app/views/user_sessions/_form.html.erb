<div class="standard-form">	
<%= form_for(@user_session) do |f| %>
<%= f.error_messages %>
<fieldset>
	<legend>Login</legend>
  <div class="field">
    <%= f.label :username %><br />
    <%= f.text_field :username, :class => 'textbox' %>
  </div>
  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password, :class => 'textbox' %>
  </div>
  <div class="field">
    <%= f.submit 'Login', :class => 'btn', :id => 'emphasis' %>
  </div>
</fieldset>
<% end %>
</div>