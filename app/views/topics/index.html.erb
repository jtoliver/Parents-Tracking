<h2>Topics</h2>
<%= link_to 'New Topic', new_topic_path %>
<div class="spacer"></div>
<table class="standard-table" id="topicTable" width="940px" border="0" cellpadding="0" cellspacing="0">
	<thead>
	  <tr>
	    <th>Topic</th>
	    <th>Description</th>
	    <th></th>
	  </tr>
	</thead>
	<tbody>
	<% @topics.each do |topic| %>
	  <tr>
	    <td><%= topic.topic %></td>
	    <td><%= topic.checkhelp %></td>
	    <td>
			<%= link_to image_tag('edit.png'), edit_topic_path(topic) %>
			<%= link_to image_tag('delete.gif'), topic, :confirm => 'Are you sure?', :method => :delete %>
		</td>
	  </tr>
	<% end %>
	</tbody>
</table>
<div class="spacer"></div>

